<div class="container">
    <div class="d-flex flex-column">
        <h5>{{name}}: R${{price}}</h5>
        <div class="d-flex flex-row">
            <a class="btn btn-primary btn-sm mx-1" href="/products/{{id}}/edit">Edit</a>
            <form action="/products/{{id}}?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger btn-sm mx-1" value="Delete">
            </form>
            <a class="btn btn-dark btn-sm mx-1" href="/products">Go Back</a>
        </div>
    </div>
</div>
